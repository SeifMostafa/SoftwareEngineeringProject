<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    tools:context="com.example.seifmostafa.checktasty.Signup"
    android:nestedScrollingEnabled="true">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_username"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/Button_signup"
        android:layout_alignEnd="@+id/Button_signup"
        android:hint="Username .. "
        android:layout_alignLeft="@+id/editText_creditnumber"
        android:layout_alignStart="@+id/editText_creditnumber" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_password"
        android:layout_below="@+id/editText_username"
        android:layout_alignRight="@+id/editText_username"
        android:layout_alignEnd="@+id/editText_username"
        android:hint="Password .."
        android:layout_alignLeft="@+id/editText_username"
        android:layout_alignStart="@+id/editText_username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText_email"
        android:layout_below="@+id/editText_password"
        android:layout_alignRight="@+id/editText_password"
        android:layout_alignEnd="@+id/editText_password"
        android:hint="Email .."
        android:layout_alignLeft="@+id/editText_password"
        android:layout_alignStart="@+id/editText_password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/Button_signup"
        android:background="#f94008"
        android:layout_below="@+id/editText_creditnumber"
        android:layout_alignRight="@+id/textView_explainnormal"
        android:layout_alignEnd="@+id/textView_explainnormal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_name"
        android:layout_below="@+id/editText_email"
        android:hint="Name .."
        android:layout_alignRight="@+id/editText_email"
        android:layout_alignEnd="@+id/editText_email"
        android:layout_alignLeft="@+id/editText_email"
        android:layout_alignStart="@+id/editText_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your credit card if you wanna "
        android:id="@+id/textView_explainusertype"
        android:textColor="#121010"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView_explainnormal"
        android:layout_alignEnd="@+id/textView_explainnormal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=".. Premium Account"
        android:id="@+id/textView_preAccount"
        android:textColor="#0b12ef"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView_explainnormal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=", Or ignore it for .. "
        android:id="@+id/textView_explainnormal"
        android:layout_below="@+id/textView_explainusertype"
        android:layout_toRightOf="@+id/textView_preAccount"
        android:layout_toEndOf="@+id/textView_preAccount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Normal Account"
        android:id="@+id/textView_normalaccount"
        android:textColor="#1e571c"
        android:textSize="20dp"
        android:layout_below="@+id/textView_explainnormal"
        android:layout_alignRight="@+id/editText_creditnumber"
        android:layout_alignEnd="@+id/editText_creditnumber" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_creditnumber"
        android:hint="Credit num .."
        android:layout_alignTop="@+id/editText_creditpassword"
        android:layout_alignLeft="@+id/textView_explainusertype"
        android:layout_alignStart="@+id/textView_explainusertype" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_creditpassword"
        android:hint="Pass.."
        android:layout_below="@+id/textView_normalaccount"
        android:layout_alignLeft="@+id/Button_signup"
        android:layout_alignStart="@+id/Button_signup"
        android:layout_marginTop="41dp" />

</RelativeLayout>
